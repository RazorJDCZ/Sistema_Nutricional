<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.ResumenController"
            prefWidth="800.0" prefHeight="700.0"
            style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #ffffff); -fx-padding: 20;">

    <VBox spacing="20.0" alignment="TOP_CENTER" layoutX="30.0" layoutY="20.0" prefWidth="740.0"
          style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

        <Label text="Resumen Nutricional Personalizado"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #00796b;" />

        <Label fx:id="lblGrupoEtario"
               style="-fx-font-size: 14px; -fx-text-fill: #555;" />

        <!-- Tabla de Recetas -->
        <TableView fx:id="tablaResumen" prefHeight="200.0"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colNombre" text="Receta" prefWidth="200.0"/>
                <TableColumn fx:id="colCalorias" text="Calorías" prefWidth="100.0"/>
                <TableColumn fx:id="colEnlace" text="Ver Receta" prefWidth="150.0"/>
            </columns>
        </TableView>

        <!-- Tabla de Comparación Nutricional -->
        <Label text="Comparación Nutricional"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #388e3c;" />

        <TableView fx:id="tablaComparacion" prefHeight="220.0"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colNutriente" text="Nutriente" prefWidth="180.0"/>
                <TableColumn fx:id="colRecomendado" text="Recomendado" prefWidth="130.0"/>
                <TableColumn fx:id="colAportado" text="Aportado" prefWidth="130.0"/>
                <TableColumn fx:id="colCumple" text="Cumple" prefWidth="100.0"/>
            </columns>
        </TableView>

        <Button text="Volver" onAction="#volverAtras" prefWidth="150.0"
                style="-fx-background-color: #81d4fa; -fx-text-fill: #004d40; -fx-background-radius: 8;" />
    </VBox>
</AnchorPane>





