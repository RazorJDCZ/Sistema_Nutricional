<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.ProductosController"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #e0f7fa, #ffffff); -fx-padding: 20;">

    <VBox spacing="20.0" alignment="TOP_CENTER" layoutX="30.0" layoutY="20.0" prefWidth="740.0"
          style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

        <Label text="Productos Disponibles"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #00796b;" />

        <TextField fx:id="txtBuscar"
                   promptText="Buscar por nombre, marca o categoría"
                   prefWidth="500.0"
                   style="-fx-font-size: 14px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-padding: 6;" />

        <TableView fx:id="tablaProductos" prefHeight="400.0" prefWidth="680.0"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="140.0" />
                <TableColumn fx:id="colUnidad" text="Unidad" prefWidth="80.0" />
                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="130.0" />
                <TableColumn fx:id="colMarca" text="Marca" prefWidth="100.0" />
                <TableColumn fx:id="colFuente" text="Fuente" prefWidth="100.0" />
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="90.0" />
            </columns>
        </TableView>

        <Button text="Volver" onAction="#volverAtras" prefWidth="200.0"
                style="-fx-background-color: #b0bec5; -fx-text-fill: #263238; -fx-font-weight: bold; -fx-background-radius: 5;" />
    </VBox>
</AnchorPane>






